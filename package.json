{
  "name": "express-api-starter",
  "version": "1.2.0",
  "description": " A basic starter for an express.js API",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint --fix src",
    "test": "NODE_ENV=test jest",
    "pretest": "NODE_ENV=test npm run migrate:dev && npm run seed:test",
    "generate": "npx prisma generate",
    "migrate:dev": "node prisma/migrate.js",
    "seed:test": "node prisma/seeds/tests.js",
    "seed:dev": "node prisma/seeds/dev.js",
    "coldstart": "node coldstart.js"
  },
  "keywords": [],
  "author": "Followthemarket",
  "repository": {
    "type": "git",
    "url": "https://github.com/WildCodeSchool/btz-js-0920-ftm-back.git"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^2.13.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jsdoc-swagger": "^1.3.0",
    "faker": "^5.1.0",
    "helmet": "^4.2.0",
    "joi": "^17.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.13.1",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "prisma migrate dev --preview-feature"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "./node_modules/.bin/eslint --max-warnings=0",
      "pretty-quick --staged"
    ]
  }
}
